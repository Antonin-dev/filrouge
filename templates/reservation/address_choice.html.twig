{% extends 'base.html.twig' %}

{% block title %}Mes adresses - Jurassic World
{% endblock %}

{% block content %}

	<div class="container-address mt-4 bg-secondary p-2 rounded-3 text-primary">
		<div class="col-md-12 d-flex justify-content-between">
			<h1 class="text-center">Choisissez votre adresse de facturation</h1>
			<a href="{{path('reservation')}}"><img src="{{asset('assets/img/close.svg')}}" alt="page prÃ©cÃ©dente" width="20px"></a>

		</div>


		<div class="row">
			<div class="col-md-12 text-center card-address">
				{% for address in app.user.addresses %}

					<div class="card ms-1" style="width: 18rem;">
						<div class="card-body text-dark">
							<h5 class="card-title">{{ address.nameaddress }}</h5>
							<p class="card-text">{{ address.address }},
								<br>
								{{ address.postal }}
								-
								{{ address.city }}
								-
								{{ address.country }}
							</p>
							<a href="{{path('reservation_recap', {'addressid' : address.id})}}" class="btn btn-success">Choisir</a>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>

	</div>


{% endblock %}
