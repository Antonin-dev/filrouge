{% extends 'base.html.twig' %}

{% block title %}Controle reservation - Acces authorisé - Jurassic World
{% endblock %}

{% block content %}
<pre>
	{{ dump(reservation) }}
</pre>
	<div class="row justify-content-center">
		<div class="container-address col-md-4 mt-4 bg-success p-2 rounded-3 text-primary">
			<div class="card bg-dark text-white">
				<img src="{{asset('assets/img/logo_jw_green.svg')}}" class="card-img-top" alt="logo jurassic world vert" width="200px">
				<div class="card-body">
					<h1 class="card-title text-success">Acces au parc autorisé</h1>
					<p class="card-text">
						<h2>Détail réservation</h2>
					</p>
					<p>{{reservation.user.firstname}}
						-
						{{reservation.user.lastname}}</p>
					<p>Numéro de réservation :
						{{reservation.numberticket}}</p>
					<p>Date d'entrée au parc : {{reservation.datechoice|date('d/m/Y')}}</p>
					<p>Nombre d'entrée :
						{{reservation.quantity}}</p>
					<p>Paiement :
						{% if reservation.ispaid == true%}
							<span class="badge rounded-pill bg-success">Success</span>
						{% else %}
							<span class="badge rounded-pill bg-danger">Echec paiement</span>
						{% endif %}
					</p>
				</p>
			</div>
		</div>
	</div>
</div>{% endblock %}
