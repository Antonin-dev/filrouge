	<div class="alert alert-info">
		{{notification}} 
		<a class="text-dark" href="{{path('app_login')}}">Mon compte</a>
	</div>
	{% endif %}
	<div class="col-md-12 d-flex justify-content-between">
		<h2 class="text-center">Ajouter un avis</h2>
		<a href="{{path('account')}}">
			<img src="{{asset('assets/img/close.svg')}}" alt="page précédente"width="20px">
		</a>
	</div>
	{{form(form)}}
</div>
{% endblock %}