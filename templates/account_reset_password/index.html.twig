{% extends 'base.html.twig' %}
{% block title %}Modifier mon mot de passe - Jurassic World
{% endblock %}
{% block content %}
<div class="container-address mt-4 bg-secondary p-2 text-primary rounded-3">
	<div class="col-md-12 d-flex justify-content-between">
		<h2 class="text-center">Reinitialisation mot de passe</h2>
		<a href="{{path('account')}}">
			<img src="{{asset('assets/img/close.svg')}}" alt="page précédente" width="20px">
		</a>
	</div>
	{% for message in app.flashes('notice') %}
		<div class="alert alert-success">{{message}}</div>
	{% endfor %}
	<form method="post">
		<label for="inputEmail">Votre email</label>
		<input type="email" name="email" id="inputEmail" class="form-control mt-2" placeholder="Votre email" required autofocus>
		<button class="btn btn-lg btn-success btn-block mt-3" type="submit">Valider</button>
		<hr>
		<p class="text-center">Ou souhaitez vous
			<a href="{{ path('app_login') }}">vous connecter</a>
		</p>
	</form>
</div>
{% endblock %}
