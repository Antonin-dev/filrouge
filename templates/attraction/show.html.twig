{% extends 'base.html.twig' %}

{% block title %}{{attraction.name}} - Jurassic World{% endblock %}
{% block effet %}{% endblock %}
{% block content %}

<div class="row pt-2 mb-4">

    <div class="col-12 bg-secondary p-2 mt-2 text-primary rounded-2 ">
        <div class="image-full" style="background-image: url(/uploads/{{attraction.imagefull}});"></div>
        <h5>{{attraction.name}}</h5>
        <span class="mb-2 badge 
    {% if attraction.category == 'Vitesse' %}
        bg-warning
    {% elseif attraction.category == 'Horreur' %}
        bg-danger
    {% elseif attraction.category == 'Jeune âge' %}
        bg-success
    {% else %}
        bg-primary
    {% endif %}
    ">{{attraction.category}}</span>
    <p class="card-text">{{attraction.description}}</p>
    </div>

</div>

<hr>

<div class="bg-secondary text-white text-center rounded-3">
    <h3>Nos attractions du moment</h3>
    <p>Découvrez les attractions les plus fun</p>
</div>

<div class="row">
    {% for attraction in attractions %}
    <div class="col-md-4">
        {% include "attraction/single_attraction.html.twig" %}
    </div>
    {% endfor %}
</div><!-- /.row -->


{% endblock %}