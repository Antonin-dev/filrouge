        <div class="col-md-12 ">
            <h1 class="text-center mt-5 bg-info text-dark h1-perso">Les Attractions du parc Jurassic World</h1>

            <div class="row attraction-container d-flex justify-content-center">
                {% for attraction in attractions %}
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        {% include "attraction/single_attraction.html.twig" %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    
{% endblock %}