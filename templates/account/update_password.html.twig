{% extends 'base.html.twig' %}
{% block title %}Modifier mon mot de passe - Jurassic World
{% endblock %}
{% block effet %}{% endblock %}
{% block footerfixed %}{% endblock %}
{% block content %}
<div class="container-address mt-4 bg-secondary p-2 text-primary rounded-3">
	<div class="col-md-12 d-flex justify-content-between">
		<h2 class="text-center">Modifier mon mot de passe</h2>
		<a href="{{path('account')}}"><img src="{{asset('assets/img/close.svg')}}" alt="page précédente" width="20px"></a>
	</div>
	{% if notification %}
		<div class="text-center alert
				{% if alert == 1 %}
					alert-danger
				{% elseif alert == 0 %}
					alert-success
				{% endif %}
				">{{notification}}
		</div>
	{% endif %}
	{{form(form)}}
</div>
{% endblock %}
