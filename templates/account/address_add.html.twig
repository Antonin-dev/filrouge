{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse - Jurassic World{% endblock %}

{% block content %}

    <div class="container-address mt-4 bg-info p-2 text-white rounded-3">
        <h1>Ajouter une addresse</h1>
        <a href="{{path('account_address')}}" class="btn btn-secondary">Retour</a></br> 
        <hr>
        {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">{{form_row(form.nameaddress)}}</div>
                <div class="col-md-6">{{form_row(form.company)}}</div>
                <div class="col-md-12">{{form_row(form.address)}}</div>
                <div class="col-md-6">{{form_row(form.postal)}}</div>
                <div class="col-md-6">{{form_row(form.city)}}</div>
                <div class="col-md-6">{{form_row(form.country)}}</div>
                <div class="col-md-6">{{form_row(form.phone)}}</div>
            </div>
            

        {{ form_end(form) }}
    </div>
    
 
{% endblock %}