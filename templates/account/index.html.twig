{% extends 'base.html.twig' %}

{% block title %}Mon compte - Jurassic World{% endblock %}

{% block content %}


    <div class="container-compte">
        <h1 class="text-white">Mon compte</h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="/admin">Vous etes admin acceder au back office</a></br> 
        {% endif %}
        <p class="text-white">Bienvenue {{app.user.firstname}} {{app.user.lastname}} dans votre compte .</br> 
        C'est dans cet espace que vous allez pouvoir g√©rer toutes vos informations personnelles.</br> 
        {# La variable app comprend tout les details de la session #}</p>
        
        <hr>   

        <div class="row">
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/padlock.png')}}" alt="">
                    <a href="{{path('account_update_password')}}">Modifier mon mot de passe</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/address.png')}}" alt="">
                    <a href="{{path('account_address')}}">Mes adresses</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/shopping-cart.png')}}" alt="">
                    <a href="">Mes commandes</a>
                </div>
            </div>
        </div>

        <hr>
    </div>
    
{% endblock %}

